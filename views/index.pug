extends layout

block content
  h1(style="margin-top:2rem")= title
  p Welcome to a very basic Express website developed for the odin project.


  table
    tbody(style='display: flex; flex-direction: column; gap: 1rem;')
      tr(style='display: flex; width: 400px; justify-content: space-between; border-bottom: 1px solid black;')
        td Items in Inventory
        td #{item_count}
      tr(style='display: flex; width: 400px; justify-content: space-between; border-bottom: 1px solid black;')
        td Categories in Inventory
        td #{category_count}
      tr(style='display: flex; width: 400px; justify-content: space-between; border-bottom: 1px solid black;')
        td Total Value of Goods
        td $ #{total_value}